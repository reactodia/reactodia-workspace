{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "removeComments": true,
    "isolatedModules": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./typings/typings.d.ts"
  ]
}
